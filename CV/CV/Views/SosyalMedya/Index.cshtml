@using CV.Models.Entity
@model List<SosyalMedya>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
@{ 
    string durum = "";
}
@{ 
    string buttonRenk = "";
}
@{ 
    string buttonYazi = "";
}
@{ 
    string buttonIkon = "";
}]
<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">

        <!-- Main content -->
        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header">
                                <br />
                                <h3 class="card-title">Sosyal Medya Hesap Listesi</h3>
                            </div>
                            <!-- /.card-header -->
                            <div class="card-body">
                                <button class="btn btn-info" data-toggle="modal" 
                                        data-target="#Modal1">Yeni Sosyal Medya Hesabı Ekle</button>
                                <br />
                                <br />
                                <table class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <th style="width: 10px">#</th>
                                            <th>Sosyal Medya</th>
                                            <th>Durum</th>
                                            <th>Düzenle</th>
                                            <th>Sil</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {

                                            if (item.Durum == true)
                                            {
                                                durum = "Aktif";
                                                buttonRenk = "btn btn-danger btn-sm";
                                                buttonYazi = "Pasif Yap";
                                                buttonIkon = "fas fa-trash";
                                            }
                                            else
                                            {
                                                durum = "Pasif";
                                                buttonRenk = "btn btn-success btn-sm";
                                                buttonYazi = "Aktif Yap";
                                                buttonIkon = "fas fa-upload";
                                            }



                                            <tr>
                                                <td>@item.ID</td>
                                                <td>@item.Ad</td>
                                                <td>@item.Durum</td>
                                                
                                                <td>
                                                    <a class="btn btn-info btn-sm" href="/SosyalMedya/SayfaGetir/@item.ID">
                                                        <i class="fas fa-pencil-alt">
                                                        </i>
                                                        Düzenle
                                                    </a>
                                                </td>
                                                <td>

                                                    <a class="@buttonRenk" href="/SosyalMedya/Sil/@item.ID">
                                                        <i class="@buttonIkon">
                                                        </i>
                                                        @buttonYazi
                                                    </a>
                                                </td>
                                            </tr>
                                        }


                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <div class="modal" id="Modal1">

            <div class="modal-dialog">

                <div class="modal-content">

                    <div class="modal-header">

                        <h2 class="modal-title">Yeni Sosyal Medya Ekleme </h2>

                    </div>

                    <form action="/SosyalMedya/Ekle" method="post">
                        <div class="modal-body">
                            <label>Sosyal Medya İsmi</label>
                            <input type="text" name="Ad" class="form-control" />
                            <br />
                            <label>Sosyal Medya Linki</label>
                            <input type="text" name="Link" class="form-control" />
                            <br />
                            <label>İkon Değeri</label>
                            <input type="text" name="ikon" class="form-control" />
                            <br />
                            <button class="btn btn-info"> Kaydet</button>
                        </div>
                    </form>

                </div>

            </div>

        </div>

    </div>
</body>
</html>
